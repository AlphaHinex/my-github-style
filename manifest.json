{
  "manifest_version": 2,
  "name": "My Github Style",
  "version": "0.2",
  "author": "Alpha Hinex <AlphaHinex@gmail.com>",
  "description": "Customize my GitHub style",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "permissions": ["storage"],
  "browser_action": {
    "default_title": "My GitHub Style",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
      "https://www.github.com/*",
      "https://github.com/*"
    ],
    "js": [
      "js/jquery.js",
      "js/script.js"
    ]
  }]
}
